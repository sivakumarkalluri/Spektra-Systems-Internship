@using CustomersApp.Models;
@model IEnumerable<dynamic>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    </head>

    <body>

        <div class="text-center">
            <h1 style="text-align:center; font-size:35px;font-weight:bold; margin-top:50px;margin-bottom:50px;">Top 10 Customers</h1>
        <table class="table table-info table-striped" style="margin:auto; max-width:900px;">
            <thead class="table-danger">
                    <th>Customer Id</th>
                    <th>Customer Name</th>
                    <th>Customer Address</th>
                    <th>Customer Email</th>
                    <th>Purchased Amount</th>
            </thead>
            <tbody>
                
                @foreach (var cust in Model)
                {

                    <tr>
                        <td>@cust.customerId</td>
                        <td>@cust.customerName</td>
                        <td>@cust.customerAddress</td>
                        <td>@cust.customerEmail</td>
                        <td>@cust.TotalPrice</td>
                    </tr>
                
                }
            
            </tbody>
         </table>
        </div>
</body>
</html>