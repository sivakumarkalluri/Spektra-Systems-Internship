@using Assignment2.Models;

@model IEnumerable<StudentDetails>
@{
    Layout = null;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Student Name</th>
            <th>Standard</th>
            <th>Age</th>
            <th>Address</th>
        </tr>
        @foreach (StudentDetails student in Model)
        {
            <tr>
                <td>@student.name</td>
                <td>@student.standard</td>
                <td>@student.age</td>
                <td>@student.address</td>
            </tr>
        }
    </table>

</div>
